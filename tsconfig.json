{
  "include": ["./src/**/*.ts", "./codecs/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "strict": true,
    "target": "ES2020",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
